{
    "name": "midcamp/hatter",
    "type": "spress-theme",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "preferred-install": "dist",
    "config": {
        "sort-packages": "true"
    },
    "require": {
        "spress/spress": "^2.1"
    },
    "autoload": {
        "psr-0": { "MidCamp\\": "src/" }
    },
    "scripts": {
        "post-install-cmd": [
            "MidCamp\\Hatter::installAssets"
        ],
        "post-update-cmd": [
            "MidCamp\\Hatter::installAssets"
        ]
    }
}
