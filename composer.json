{
    "name": "midcamp/midcamp",
    "description": "The MidCamp website.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "preferred-install": "dist",
    "config": {
        "sort-packages": "true"
    },
    "repositories": {
        "hatter-styleguide": {
            "type": "vcs",
            "url": "https://github.com/midcamp/hatter.git"
        },
        "palantir-behat-extension": {
            "type": "vcs",
            "url": "https://github.com/palantirnet/palantir-behat-extension.git"
        },
        "workbench-tabs": {
            "type": "vcs",
            "url": "https://github.com/palantirnet/workbench_tabs.git"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "composer/installers": "^1.0",
        "cweagans/composer-patches": "~1.0",
        "drupal-composer/drupal-scaffold": "^2.3",
        "drupal/address": "1.x-dev",
        "drupal/admin_toolbar": "^1.18",
        "drupal/config_installer": "^1.5",
        "drupal/contact_formatter": "^1.0",
        "drupal/core": "^8.4",
        "drupal/devel": "^1.0@beta",
        "drupal/geocoder_geofield": "^2.0@alpha",
        "drupal/geolocation": "^1.8",
        "drupal/linkicon": "^1.4",
        "drupal/mailchimp": "^1.2",
        "drupal/masquerade": "^2.0@beta",
        "drupal/paragraphs": "^1.2",
        "drupal/pathauto": "^1.0",
        "drupal/scheduler": "^1.0@RC",
        "drupal/twig_extensions": "^1.0",
        "drupal/viewsreference": "^1.0@alpha",
        "midcamp/hatter": "dev-master",
        "palantirnet/workbench_tabs": "^1.1",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "composer/composer": "@dev",
        "drupal/coder": "^8.2",
        "drupal/console": "^1.0",
        "drupal/drupal-extension": "^3.1",
        "drush/drush": "^9.0",
        "palantirnet/palantir-behat-extension": "dev-drupal8-file-revisited",
        "phpmd/phpmd": "^2.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-create-project-cmd": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "MidCamp\\Hatter::installAssets",
        "post-update-cmd": "MidCamp\\Hatter::installAssets"
    },
    "extra": {
        "patches": {
            "drupal/core": {
                "Fix 8.4-rc1 install issue (https://www.drupal.org/node/2907654)": "https://www.drupal.org/files/issues/2907654-3-display-mode-url-route-parameters.patch"
            },
            "drupal/twig_extensions" : {
                "PHP intl extension mission" : "https://www.drupal.org/files/issues/2694185-14.patch"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "styleguide": {
            "theme-path": "web/themes/custom/hatter/"
        }
    }
}
